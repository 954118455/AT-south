/* pages/message/message.wxss */
page {
  background: white;
}

/*顶部选项卡*/
.message-nav {
  padding-bottom: 24rpx;
  width: 100%;
  height: 100rpx;
  opacity: 1;
  background: #ffffff;
}

.menu_box {
  margin-left: 40rpx;
  width: auto;
  height: 100rpx;
  opacity: 1;
  background: #ffffff;
}

.menu1,
.menu2,
.menu3 {
  margin-top: 24rpx;
  float: left;
  width: 192rpx;
  height: 76rpx;
  opacity: 1;
  background: #ffffff;
}

.menu-text {
  margin-left: 50rpx; 
  margin-top: 24rpx;
  width: 56rpx;
  height: 28rpx;
  opacity: 1;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: LEFT;
  color: rgba(0, 0, 0, 0.38);
  line-height: 28px;
}

.nav-set {
  float: right;
  margin-top: 38rpx;
  margin-right: 40rpx;
  width: 48rpx;
  height: 48rpx;
  opacity: 1;
}

.nav-set-img {
  width: 100%;
  height: 100%;
}

.borders {
  border-bottom: 4rpx solid green;
  color: green;
}

.tab1,
.tab2,
.tab3 {
  width: 100%;
  height: auto;
}

/*私信内容*/
.message-view {
  margin-top: 24rpx;
  margin-left: 40rpx;
  width: 670rpx;
  height: 144rpx;
  opacity: 1;
}

.message-view-img {
  float: left;
  margin-top: 32rpx;
  width: 80rpx;
  height: 80rpx;
  opacity: 1;
  border-radius: 16px;
}

.message-view-title {
  width: 70%;
  display: flex;
  flex-direction: column;
}

.message-view-name {
  margin-top: 32rpx;
  margin-left: 28rpx;
  float: left;
  width: auto;
  height: 28rpx;
  opacity: 1;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: LEFT;
  color: #000000;
  line-height: 28rpx;
}

.message-view-text {
  margin-left: 28rpx;
  margin-top: 20rpx;
  float: left;
  width: auto;
  height: 32rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: rgba(0, 0, 0, 0.38);
  line-height: 32rpx;
}

.message-view-time {
  float: right;
  width: auto;
  height: 32rpx;
  opacity: 1;
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: RIGHT;
  color: rgba(0, 0, 0, 0.20);
  line-height: 32rpx;
}

/*通知内容*/
.inform-img {
  margin-top: 16rpx;
  float: right;
  width: 48rpx;
  height: 48rpx;
  opacity: 1;

}

.inform {
  margin-top: 24rpx;
  margin-left: 5%;
  width: 90%;
  height: 80rpx;
  opacity: 1;
  background: #ffffff;
  box-shadow: 0px 1rpx 0px 0px rgba(0, 0, 0, 0.05);
}

.inform-name {
  margin-top: 24rpx;
  float: left;
  width: auto;
  height: 32rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: #54c38d;
  line-height: 32rpx;
  text-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.05);
}

.inform-methods {
  float: left;
  margin-left: 6rpx;
  margin-top: 24rpx;
  width: auto;
  height: 32rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #000000;
  line-height: 32rpx;
  text-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.05);
}

.inform-content {
  float: left;
  width: auto;
  height: 32rpx;
  opacity: 1;
  margin-top: 24rpx;
  margin-left: 6rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: #54c38d;
  line-height: 32rpx;
  text-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.05);
}

/*评论内容*/
.border {
  opacity: 1;
  background: #76cfa4;
  border: 2px solid #54c38d;
  border-radius: 18px;
  color: white;
}

.comments {
  margin-left: 5%;
  width: 90%;
  height: 64rpx;
  margin-top: 48rpx;
  margin-bottom: 24rpx;
}

.comments1 {
  float: left;
  width: 43%;
  height: 64rpx;
  opacity: 1;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 18px;
}

.comments2 {
  float: right;
  width: 43%;
  height: 64rpx;
  opacity: 1;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 18px;
}

.comments-text {
  margin-top: 12rpx;
  margin-left: 37%;
  float: left;
  width: 84rpx;
  height: 38rpx;
  opacity: 1;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: RIGHT;
  color: rgba(0, 0, 0, 0.20);
  line-height: 38rpx;
}