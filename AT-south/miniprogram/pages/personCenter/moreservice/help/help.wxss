/* service/help/help.wxss */
page {
  background: white;
}

.help {
  height: auto;
  width: 100%;
  margin-bottom: 126px;
}

/*专业方向框*/
.direction-section {
  margin-top: 34px;
  width: 100%;
  height: 86px;
  opacity: 1;
}

.input {
  height: 100px;
  width: 100%;
  padding: 25rpx 0;
}

.help-input {
  margin-top: 13px;
  width: 100%;
  height: 80rpx;
  padding: 0 25rpx;
  background-color: #fff;

}

.direction-text {
  height: 20px;
}

/*成就框*/
textarea {
  height: 100px;
  width: 100%;
  padding: 25rpx 0;
}

.textarea-wrpe {
  height: 40px;
  margin-top: 13px;
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section {
  margin-top: 24px;
  width: 100%;
  margin-bottom: 50px;
}

.page-section:last-child {
  margin-bottom: 0;
}

.textarea-wrp {
  margin-left: 20px;
  margin-top: 10px;
  width: 90%;
  height: auto;
  opacity: 1;
  background: #ffffff;
  box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.05);
}

.page-section-title {
  margin-left: 20px;
  height: 16px;
  opacity: 1;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: rgba(0, 0, 0, 0.87);
  line-height: 16px;
}

/*图片框*/


.photo-section-title {
  float: left;
  margin-left: 22px;
  margin-right: 8px;
  width: 50px;
  height: 16px;
  opacity: 1;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: rgba(0, 0, 0, 0.87);
  line-height: 16px;
}

.photo-section-title-2 {
  float: left;
  width: 220px;
  height: 16px;
  opacity: 1;
  font-size: 11px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: rgba(0, 0, 0, 0.20);
  line-height: 16px;
}

.photo-b1 {
  float: left;
  margin-left: 20px;
  margin-top: 24px;
  margin-bottom: 68px;
  width: 80px;
  height: 80px;
  opacity: 1;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 8px;
  padding: 0;
}

.photo-img {
  margin: 28px;
  width: 24px;
  height: 24px;

}

.submit-b1 {
  margin-left: 5%;
  margin-right: 5%;
  width: 90%;
  height: 50px;
  padding: 0;
  background: #54c38d;
}

.submit-b1-text {
  width: 28px;
  height: 20px;
  opacity: 1;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: CENTER;
  color: #ffffff;
}