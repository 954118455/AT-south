/* 遮盖层 */
.background_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.dialog {
  width: 100%;
  height: 894rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2000;
}
.dialog > .dialogRow {
  position: relative;
  height: 112rpx;
  width: 750rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  display: flex;
  flex-flow: row;
}
.dialog > .dialogRow > .title {
  margin-top: 32rpx;
  margin-left: 40rpx;
  width: 670rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: center;
  line-height: 80rpx;
  color: rgba(0,0,0,0.87);
}
.dialog > .dialogRow > .back {
  position: relative;
  top: 48rpx;
  right: 40rpx;
  width: 48rpx;
  height: 48rpx;
}
.dialog > .dialogInput {
  position: relative;
  margin-top: 48rpx;
  padding-left: 4rpx;
  width: 670rpx;
  height: 88rpx;
  box-shadow: 0px 2rpx 0px 0px rgba(0,0,0,0.05); 
}
.dialog > .dialogInput > .input {
  width: 600rpx;
  height: 88rpx;
}
.input-placeholder {
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: rgba(0,0,0,0.38);
  line-height: 88rpx;
  text-shadow: 0px 1px 0px 0px rgba(0,0,0,0.05); 
}
.dialog > .dialogInput > .input-close-icon {
  position: absolute;
  top: 20rpx;
  right: 0rpx;
}
.dialog > .dialogButton {
  position: absolute;
  bottom: 88rpx;
  left: 40rpx;
  width: 670rpx;
  height: 100rpx;
  border-radius: 16rpx;
}
.dialog > .dialogButton > .ensure {
  width: 670rpx;
  height: 100rpx;
  border-radius: 16rpx;
  background: #54c38d;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: center;
  line-height: 100rpx;
  color: #ffffff;
}