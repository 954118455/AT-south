/* miniprogram/pages/home/question-filter/question-filter.wxss */
.container {
  position: relative;
  width: 750rpx;
  padding: 0rpx 40rpx;
}

.filter-time {
  position: relative;
  margin-top: 24rpx;
  width: 670rpx;
  height: 96rpx;
  display: flex;
  flex-flow: row;
}
.filter-time > .time {
  margin: 34rpx 0rpx;
  width: auto;
  height: 28rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: left;
  color: rgba(0,0,0,0.87);
  line-height: 28rpx;
}
.filter-time > .icon {
  position: absolute;
  right: 0rpx;
  margin: 24rpx 0rpx;
  width: 48rpx;
  height: 48rpx;
}

.time-tag-view {  
  width: 670rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}
.time-tag {
  margin-top: 16rpx;
  margin-right: 24rpx;
}
.time-tag-view > .time-tag > .tag { 
  padding: 4rpx 20rpx;
  width: auto;
  height: 48rpx;
  border: 2rpx solid rgba(0,0,0,0.38);
  border-radius: 18rpx;
  font-size: 10px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: rgba(0,0,0,0.38);
}
.tag-select-style {
  color: #54C38D;
  opacity: 1;
  background: rgba(84,195,141,0.10);
  border-color: #54C38D;
}

.button {
  position: fixed;
  bottom: 112rpx;
  margin-top: 782rpx;
  width: 670rpx;
  height: 76rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.button > .reset {
  width: 320rpx;
  height: 76rpx;
  background: rgba(0,0,0,0.20);
  border-radius: 16rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: center;
  line-height: 76rpx;
  color: #ffffff;
}
.button > .ensure {
  width: 320rpx;
  height: 76rpx;
  background: #54c38d;
  border-radius: 16rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Semibold;
  font-weight: 600;
  text-align: center;
  line-height: 76rpx;
  color: #ffffff;
}